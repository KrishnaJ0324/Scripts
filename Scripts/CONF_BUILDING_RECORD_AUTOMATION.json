{
  "Planning/Residential/New/NA": {
    "WorkflowTaskUpdateAfter": [
      {
        "metadata": " ----- TESTING -----"
      }
    ],
    "ApplicationSubmitAfter": [
      {
        "metadata": {
          "description": "Upon submission, check Permit Type, then update ASI and notify.",
          "operators": {}
        },
        "preScript": "if (AInfo['Permit Type'] != 'New Construction') { cancel = true; }",
        "criteria": {},
        "action": {
          "updateASI": {
            "asiGroup": "SUBMITTAL_INFO",
            "asiSubGroup": null,
            "asiLabel": "Submission Status",
            "asiValue": "Received"
          },
          "notifications": [
            {
              "type": "email",
              "template": "PLN_APP_RECEIVED",
              "recipients": [
                "planning_group",
                "applicant"
              ]
            }
          ]
        },
        "postScript": "logDebug('New Construction application received and processed.');"
      }
    ],
    "Temporary": [
      {
        "Update": "latest"
      }
    ]
  },
  "Building/Street Cut/Tree_Removal/NA": {
    "WorkflowTaskUpdateAfter": [
      {
        "metadata": {
          "description": "Automatically assess a fee when the Completeness Check task is set to Correction Required",
          "operators": {},
          "errorHandling": "retry",
          "maxRetries": 3,
          "retryDelay": 5000
        },
        "preScript": "if (hasExistingFee('ABCARTSA02')) { skipAction('Duplicate fee already exists'); }",
        "criteria": {
          "allowBalance": false,
          "task": [
            "Completeness Check"
          ],
          "status": [
            "Correction Required"
          ]
        },
        "action": {
          "assessFees": [
            {
              "feeSchedule": "ABC_ARTS_APP",
              "feeCode": "ABCARTSA02",
              "feeQuantity": 1,
              "feeInvoice": "Y",
              "feePeriod": "FINAL"
            }
          ],
          "notifications": [
            {
              "type": "email",
              "template": "fee_assessment_notification",
              "recipients": [
                "applicant",
                "reviewer"
              ]
            }
          ]
        },
        "postScript": "logAction('fee_assessed', {task: criteria.task, status: criteria.status, timestamp: new Date()}); notifyApplicant('Fee assessed for correction required - please check your email for details');"
      }
    ]
  }
}